<!doctype html>
<html class="no-js" lang="en">
  {{> head}}
  <body class="black-90 sans-serif">
    {{> header}}
    <div>
      <ul class="list mw7 pa0 ml4 mr4">
        {{#posts}}
        <li class="mb4">
          <a href="/writing/{{slug}}.html" class="mb1 b db dark-green no-underline underline-hover">{{title}}</a>
          <div>{{published}}</div>
          <div class="measure-wide lh-copy mt2">
            {{{excerpt}}}
          </div>
        </li>
        {{/posts}}
      </ul>
      <div class="flex">
        {{#prev}}
          <div class="ml4">← <a class="dark-green" href="/writing/{{prev}}.html">Previous</a></div>
        {{/prev}}
        {{#next}}
          <div class="ml4"><a class="dark-green" href="/writing/{{next}}.html">Next</a> →</div>
        {{/next}}
      </div>
    </div>
    {{> footer}}
  </body>
</html>
